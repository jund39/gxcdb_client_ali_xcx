#problemDetail {
    flex-direction: column;
    width: 100%;
}

#problemDetail .head {
    width: 100%;
    height: 80rpx;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #333;
    margin-bottom: 20rpx;
}

#problemDetail .content {
    font-size: 28rpx;
    color: #666;
    line-height: 50rpx;
    margin-top: 20rpx;
    padding: 0 30rpx;
    text-indent: 2em;
}