}

.banner {
    width: 100%;
    height: 272rpx;
    margin-bottom: 20rpx;
}

.swiper {
    position: relative;
    width: 100%;
    height: 100%;
}

#refundsDeposit .refundsFont {
    font-size: 42rpx;
    color: #666;
    margin: 0rpx 0 30rpx 0rpx;
    line-height: 42rpx;
