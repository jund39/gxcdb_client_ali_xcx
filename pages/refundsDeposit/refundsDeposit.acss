/* 委托扣款授权书 */

#refundsDeposit .agrees {
    align-items: center;
    font-size: 28rpx;
    color: #333;
    text-align: center;
}

.green {
    color: #3EDEDE;
}

/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    border-color: #E0E0E0;
}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: none;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    color: #05D7D7;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

#refundsDeposit .agreement_mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, .6);
    z-index: 10;
}

#refundsDeposit .agreement {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 600rpx;
    height: 80vh;
    margin: auto;
    background-color: #fff;
    z-index: 11;
    box-sizing: border-box;
    padding: 20rpx 20rpx 0;
}

#refundsDeposit .agreement .heads {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 20rpx;
    justify-content: center;
}

#refundsDeposit .agreement .txt {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    margin-bottom: 20rpx;
    text-indent: 2em;
}