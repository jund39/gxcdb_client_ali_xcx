}

#refundsDeposit .deposit_wrap {
    position: relative;
    width: 674rpx;
    height: 272rpx;
    margin: 0 auto;
}

#refundsDeposit .deposit_bg {
    width: 100%;
    height: 100%;
}

#refundsDeposit .deposit {
    position: absolute;
    left: 0;
    top: 0;
