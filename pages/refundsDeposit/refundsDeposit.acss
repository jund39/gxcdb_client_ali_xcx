    float: left;
}

#refundsDeposit .interactive_d {
    color: #fff;
    font-size: 30rpx;
    margin-bottom: 30rpx;
    width: 100%;
    display: block;
    float: left;
}
#refundsDeposit .interactiveDeposit {
    color: #fff;
    font-size: 26rpx;
    line-height: 36rpx;
    display: block;
    float: left;
}

#refundsDeposit .interactiveRefunds {
    color: #fff;
    font-size: 26rpx;
    line-height: 36rpx;
    display: block;
    float: left;
}

#refundsDeposit .loan {
    margin-top: 60rpx;
}

#refundsDeposit .loan {
    width: 440rpx;
    height: 304rpx;
}

#refundsDeposit .loan image {
    width: 100%;
    height: 100%;
}

#refundsDeposit .weChat {
    flex-direction: column;
    background-color: #fff;
    border-radius: 14rpx;
    width: 677rpx;
    font-size: 26rpx;
    color: #999;
    padding: 0rpx 30rpx 30rpx;
    box-sizing: border-box;
    margin: 50rpx auto 30rpx auto;
}

#refundsDeposit .weChatText {
    font-size: 28rpx;
    padding: 20rpx 0rpx;
    align-items: center;
    color: #333;
    font-weight: bold;
}

#refundsDeposit .weChat .money {
    font-size: 28rpx;
    color: #06AE50;
    margin-bottom: 10rpx;
}

#refundsDeposit .weChat .txt {
    line-height: 45rpx;
}




